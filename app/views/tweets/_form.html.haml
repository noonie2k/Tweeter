= form_for @tweet do |f|
  - if @tweet.errors.do
    #error_explanation
      %h2= pluralize(@tweet.errors.count, 'error') + ' prohibited this tweet from being saved:'
      %ul
        - @tweet.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :author_id
    = f.number_field :author_id
  .field
    = f.label :body
    = f.text_field :body
  .actions
    = f.submit